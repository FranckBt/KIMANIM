{% extends 'admin.html.twig' %}

{% block container %}

	<h2>Gestion admin</h2>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				
				<th>Prenom</th>
				<th>Nom</th>
				<th>Créé le</th>
				<th>Actif</th>
				<th>Validate</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>

			{% for user in users %}
				
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.surname }}</td>
						<td>{{ user.name }}</td>
						<td>{{ user.createdAt ? user.createdAt|date('d-M-Y H:i:s') : '' }}</td>
						<td>{{ user.actif ? 'Yes' : 'No' }}</td>
						<td>{{ user.validate ? 'Yes' : 'No' }}</td>
						<td>
							<a href="{{ path('app_users_gestion_show', {'id': user.id}) }}">show</a>
							<a href="{{ path('app_users_gestion_edit', {'id': user.id}) }}">éditer</a>
						</td>
					</tr>


			{% else %}
				<tr>
					<td colspan="16">no records found</td>
				</tr>
			{% endfor %}


		</tbody>
	</table>
	<a href="{{ path('app_users_gestion_new') }}">Create new</a>
{% endblock %}

