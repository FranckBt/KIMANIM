{% extends 'admin.html.twig' %}

{% block avis %}
    <h1>Avis index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Created_at</th>
                <th>Text</th>
                <th>Rate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for avi in avis %}
            <tr>
                <td>{{ avi.id }}</td>
                <td>{{ avi.createdAt ? avi.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ avi.text }}</td>
                <td>{{ avi.rate }}</td>
                <td>
                    <a href="{{ path('app_avis_gestion_show', {'id': avi.id}) }}">show</a>
                    <a href="{{ path('app_avis_gestion_edit', {'id': avi.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_avis_gestion_new') }}">Create new</a>
{% endblock %}
