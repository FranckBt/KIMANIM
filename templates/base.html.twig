<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>Kimanim
			{% block title %}{% endblock %}
		</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;900&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

		{{ encore_entry_link_tags('app') }}
		{% block stylesheets %}{% endblock %}

		{{ encore_entry_script_tags('app') }}
		{% block javascripts %}{% endblock %}
	</head>
	<body>
		<header>

			<div class="logo">
				<h1 class="title">
					<a href="{{path('app_homepage')}}">Kimanim</a>
				</h1>
				<img src="{{ asset('assets/img/Logo_kimanim.png') }}" alt="logo Kimanim">
			</div>
			<div class="burger-button">
				<span class="burger-top"></span>
				<span class="burger-middle"></span>
				<span class="burger-bottom"></span>
			</div>
			<div class="burger-menu">
				<a href="{{path('app_homepage')}}">Acceuil</a>
				<a href="{{path('app_register')}}">Inscription</a>
				<a href="{{path('login')}}">Se connecter</a>
				<a href="{{path('app_activites')}}">Activités</a>
			</div>
			<nav>
				<ul class="nav-bar">
					<li>
						<a href="{{path('app_homepage')}}">Acceuil</a>
					</li>
					<li>
						<a href="{{path('app_register')}}">Inscription</a>
					</li>
					<li>
						<a href="{{path('login')}}">Se connecter</a>
					</li>
					<li>
						<a href="{{path('app_activites')}}">Activités</a>
					</li>
				</ul>
			</nav>
		</header>
		<div class="container"> 
        {% block body %}
        {% endblock %}
		</div>

			<footer>
				<div class="flex">
					<p class="role">
						<a href="#">Vous êtes parent</a>
					</p>
					<ul class="social-media">
						<li class="social-icon">
							<a href="#"><img src="{{ asset('assets/img/icon_fb.png') }}" alt="icon facebook"></a>
						</li>
						<li class="social-icon">
							<a href="#"><img src="{{ asset('assets/img/icon_twitter.png') }}" alt="icon twitter"></a>
						</li>
						<li class="social-icon">
							<a href="#"><img src="{{ asset('assets/img/icon_linkedin.png') }}" alt="icon linkedin"></a>
						</li>
					</ul>
					<p class="role">
						<a href="#">Vous êtes animateur</a>
					</p>
				</div>


				<div class="footer-contact">
					<a href="{{path('app_contact')}}">Contactez-nous</a>
				</div>

				<div class="flex-2">
					<ul>
						<li><ahref="{{path('app_faq')}}">FAQ</a></li>
						<li><ahref="{{path('app_mentions')}}">Mentions légales</a></li>
					</ul>
				</div>
				<p class="copyright">&copy Kimanim 2022</p>
			</footer>
		</body>
	</html>
