<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>Kimanim
			{% block title %}{% endblock %}
		</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;900&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
<link rel="icon" href={{ asset('assets/img/Kimanim_mini_logo.png') }} />
		{{ encore_entry_link_tags('app') }}
		{% block stylesheets %}{% endblock %}

		
	</head>
	<body>
		<header>

			<div class="logo">
				<a href="{{path('homepage')}}">
					<h1 class="title">
						Kimanim
					</h1>
					<img src="{{ asset('assets/img/Logo_kimanim.png') }}" alt="logo Kimanim">
				</a>
			</div>
			<div class="burger-button">
				<span class="burger-top"></span>
				<span class="burger-middle"></span>
				<span class="burger-bottom"></span>
			</div>
			<div class="burger-menu">
				<a href="{{path('homepage')}}">Acceuil</a>
				<a href="{{path('activites')}}">Activités</a>
				{% if app.user %}
					<a href="{{path('account_index')}}">Mon compte</a>
					<a href="{{path('logout')}}">Déconnexion</a>
				{% else %}
					<a href="{{path('login')}}">Connexion</a>
					<a href="{{path('register')}}">S'inscrire</a>
				{% endif %}
			</div>
			<nav>
				<ul class="nav-bar">
					<li>
						<a href="{{path('homepage')}}">Acceuil</a>
					</li>
					<li>
						<a href="{{path('activites')}}">Activités</a>
					</li>
					
					{% if app.user %}
						{% if is_granted('ROLE_ADMIN') %}
							<li>
								<a href="{{path('app_admin')}}">Administration</a>
							</li>
						{% else %}
							<li>
								<a href="{{path('account_index')}}">Mon compte</a>
							</li>
						{% endif %}
					<li>
						<a href="{{path('logout')}}">Déconnexion</a>
					</li>
					{% else %}
					<li>
						<a href="{{path('login')}}">Connexion</a>
					</li>
					<li>
						<a href="{{path('register')}}">S'inscrire</a>
					</li>
					{% endif %}
				</ul>
			</nav>
		</header>
		<div class="container"> 
        {% block body %}
        {% endblock %}
		</div>

			<footer>
				<div class="flex">
					<p class="role">
						<a href="{{path('register')}}">Vous êtes parent</a>
					</p>
					<ul class="social-media">
						<li class="social-icon">
							<a href="#"><img src="{{ asset('assets/img/icon_fb.png') }}" alt="icon facebook"></a>
						</li>
						<li class="social-icon">
							<a href="#"><img src="{{ asset('assets/img/icon_twitter.png') }}" alt="icon twitter"></a>
						</li>
						<li class="social-icon">
							<a href="#"><img src="{{ asset('assets/img/icon_linkedin.png') }}" alt="icon linkedin"></a>
						</li>
					</ul>
					<p class="role">
						<a href="{{path('register')}}">Vous êtes animateur</a>
					</p>
				</div>


				<div class="footer-contact">
					<a href="{{path('contact')}}">Contactez-nous</a>
				</div>

				<div class="flex-2">
					<ul>
						<li><a href="{{path('faq')}}">FAQ</a></li>
						<li><a href="{{path('mentions')}}">Mentions légales</a></li>
					</ul>
				</div>
				<p class="copyright">&copy Kimanim 2022</p>
			</footer>
		</body>

		{{ encore_entry_script_tags('app') }}
		{% block javascripts %}{% endblock %}
	</html>
