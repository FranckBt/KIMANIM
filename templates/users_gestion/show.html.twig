{% extends 'admin.html.twig' %}

{% block show %}


	<h1>Utilisateurs</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Prénom</th>
				<td>{{ user.surname }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ user.name }}</td>
			</tr>
			<tr>
				<th>Créé le</th>
				<td>{{ user.createdAt ? user.createdAt|date('d-M-Y H:i:s') : '' }}</td>
			</tr>

			<tr>
				<th>Actif</th>
				<td>{{ user.actif ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>Valide</th>
				<td>{{ user.validate ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>Numéro de téléphone</th>
				<td>{{ user.phone }}</td>
			</tr>
			<tr>
				<th>Pseudo</th>
				<td>{{ user.alias }}</td>
			</tr>
			<tr>
				<th>Avatar</th>
				<td>{{ user.avatar }}</td>
			</tr>
			<tr>
				<th>Bio</th>
				<td>{{ user.bio }}</td>
			</tr>
		</tbody>
	</table>
	<div class="mb">
		<a class=" btn btn-primary btnReturn" href="{{ path('app_users_gestion_index') }}">Retour liste</a>
	</div>
	<div class="mb">
		<a class=" btn btn-succes btnEdit" href="{{ path('app_users_gestion_edit', {'id': user.id}) }}">Edtition</a>
	</div>
	{{ include('users_gestion/_delete_form.html.twig') }}

{% endblock %}
