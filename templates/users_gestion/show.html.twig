{% extends 'admin.html.twig' %}

{% block show %}



		<h1>Users</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Surname</th>
					<td>{{ user.surname }}</td>
				</tr>
				<tr>
					<th>Created_at</th>
					<td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ user.name }}</td>
				</tr>
				<tr>
					<th>Actif</th>
					<td>{{ user.actif ? 'Yes' : 'No' }}</td>
				</tr>
				<tr>
					<th>Validate</th>
					<td>{{ user.validate ? 'Yes' : 'No' }}</td>
				</tr>
				<tr>
					<th>Phone</th>
					<td>{{ user.phone }}</td>
				</tr>
				<tr>
					<th>Alias</th>
					<td>{{ user.alias }}</td>
				</tr>
				<tr>
					<th>Avatar</th>
					<td>{{ user.avatar }}</td>
				</tr>
				<tr>
					<th>Bio</th>
					<td>{{ user.bio }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_users_gestion_index') }}">back to list</a>

		<a href="{{ path('app_users_gestion_edit', {'id': user.id}) }}">edit</a>

		{{ include('users_gestion/_delete_form.html.twig') }}

{% endblock %}
