{% extends 'admin.html.twig' %}

{% block title %}Activities{% endblock %}
{% block showactivites %}

    <h1>Activities</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activity.description }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ activity.createdAt ? activity.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Start_on</th>
                <td>{{ activity.startOn ? activity.startOn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ activity.adress }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ activity.city }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ activity.zipcode }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ activity.status }}</td>
            </tr>
            <tr>
                <th>Min_participants</th>
                <td>{{ activity.minParticipants }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ activity.title }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_activities_gestion_index') }}">back to list</a>

    <a href="{{ path('app_activities_gestion_edit', {'id': activity.id}) }}">edit</a>

    {{ include('activities_gestion/_delete_form.html.twig') }}
{% endblock %}
